<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:paddingTop="@dimen/pdf_vertical_margin"
    android:paddingBottom="@dimen/pdf_vertical_margin"
    android:paddingLeft="@dimen/pdf_horizontal_margin"
    android:paddingRight="@dimen/pdf_horizontal_margin">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout style="@style/DetailsBlockPDF"
            android:id="@+id/column_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5px"
            android:layout_marginRight="5px"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_gravity="center">

                <ImageView
                    android:id="@+id/photo_1"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_margin="5px"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/photo_2"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_margin="5px"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/photo_3"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_margin="5px"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center"
                    android:visibility="gone"/>

        </LinearLayout>

        <LinearLayout style="@style/DetailsBlockPDF"
            android:id="@+id/column_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5px"
            android:layout_marginTop="5px"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:visibility="gone">

            <ImageView
                android:id="@+id/photo_6"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="5px"
                android:scaleType="fitCenter"
                android:layout_gravity="center"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/photo_5"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="5px"
                android:scaleType="fitCenter"
                android:layout_gravity="center"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/photo_4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="5px"
                android:scaleType="fitCenter"
                android:layout_gravity="center"
                android:visibility="gone"/>

        </LinearLayout>
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

    <!-- Footer info -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12px"
        android:layout_gravity="bottom"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/bottom_icon"
            android:layout_width="35px"
            android:layout_height="35px"
            android:layout_gravity="left"
            android:src="@drawable/mbicon" />

        <TextView
            android:id="@+id/bottom_text"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="left"
            android:gravity="center_vertical"
            android:textColor="@android:color/black"
            android:text="@string/created_w_memory_bite"
            android:textSize="10px" />

        <TextView
            android:id="@+id/page_number"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="right"
            android:gravity="right|center_vertical"
            android:textColor="@android:color/black"
            android:layout_marginRight="14px"
            android:textSize="10px" />

    </LinearLayout>
</LinearLayout>